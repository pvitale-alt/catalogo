<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Catálogo</title>
    <link rel="stylesheet" href="/css/main.css?v=<%= Date.now() %>">
</head>
<body>
    <!-- Header General -->
    <header class="top-header">
        <div style="display: flex; align-items: center; gap: 12px;">
            <img src="/images/logo.png" alt="Logo" style="height: 28px; width: auto; display: block;" onerror="this.style.display='none';" />
            <span style="font-size: 16px; font-weight: 500; color: var(--text-secondary); font-family: 'Google Sans', 'Roboto', sans-serif;">Catálogo Unitrade</span>
        </div>
    </header>
    
    <div class="app-container" style="margin-top: 0;">
        <%- include('../partials/sidebar', { activeMenu: 'proyectos-internos' }) %>
        
        <div class="main-content" style="position: relative;">
            <!-- Imagen de fondo con opacidad -->
            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; z-index: 0; opacity: 0.2; background-image: url('/images/cover.png'); background-size: cover; background-position: center; background-repeat: no-repeat; pointer-events: none;"></div>
            <div class="content-area" style="position: relative; z-index: 1;">
                <!-- Botón volver -->
                <div style="margin-bottom: 24px;">
                    <button onclick="history.back()" class="button button-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
                        </svg>
                        Volver
                    </button>
                </div>
                
                <!-- Detalle de proyecto -->
                <div class="card" style="max-width: 1000px; margin: 0 auto;">
                    <!-- Header -->
                    <div style="border-bottom: 1px solid var(--border-color); padding-bottom: 24px; margin-bottom: 24px;">
                        <div style="display: flex; align-items: flex-start; justify-content: space-between; gap: 24px;">
                            <div style="flex: 1;">
                                <h1 style="font-size: 28px; font-weight: 600; color: var(--text-primary); margin-bottom: 12px;">
                                    <%= proyecto.titulo %>
                                </h1>
                                
                                <div style="display: flex; gap: 12px; flex-wrap: wrap; margin-top: 16px; flex-direction: column;">
                                    <div style="display: flex; gap: 12px; flex-wrap: wrap;">
                                        <% if (proyecto.seccion) { %>
                                            <span class="item-badge">
                                                <%= proyecto.seccion %>
                                            </span>
                                        <% } %>
                                        
                                        <% 
                                        let score = proyecto.score_calculado || proyecto.score_total || 0;
                                        score = parseFloat(score) || 0;
                                        let scoreClass = 'score-low';
                                        if (score > 6.50) scoreClass = 'score-high';
                                        else if (score > 4) scoreClass = 'score-medium';
                                        %>
                                        <span class="score-badge <%= scoreClass %>">
                                            ⭐ Score: <%= score.toFixed(1) %>
                                        </span>
                                    </div>
                                    
                                    <% if (proyecto.redmine_id) { 
                                        const baseUrl = (redmineBaseUrl || 'https://redmine.mercap.net').replace(/\/+$/, '');
                                        const epicUrl = `${baseUrl}/issues/${proyecto.redmine_id}`;
                                    %>
                                        <div style="margin-top: 8px;">
                                            <a href="<%= epicUrl %>" target="_blank" style="color: var(--primary-color); text-decoration: none; font-size: 14px; display: flex; align-items: center; gap: 6px;">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                                    <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                                                </svg>
                                                Ver en Redmine
                                            </a>
                                        </div>
                                        <% if (proyecto.services_id) { %>
                                            <div style="margin-top: 8px; color: var(--text-secondary); font-size: 14px; display: flex; align-items: center; gap: 6px;">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="color: var(--primary-color);">
                                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                                                </svg>
                                                Services ID: <%= proyecto.services_id %>
                                            </div>
                                        <% } %>
                                        <% if (proyecto.proyecto_completo) { %>
                                            <div style="margin-top: 8px; color: var(--text-secondary); font-size: 14px; display: flex; align-items: center; gap: 6px;">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" style="color: var(--primary-color);">
                                                    <path d="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/>
                                                </svg>
                                                Proyecto: <%= proyecto.proyecto_completo %>
                                            </div>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div style="text-align: right; display: flex; gap: 12px; justify-content: flex-end;">
                                <button onclick="toggleEdicion()" class="button button-secondary" id="btnEditar">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                                    </svg>
                                    <span id="btnEditarTexto">Editar</span>
                                </button>
                                <button onclick='window.location.href="/score/calculadora/" + encodeURIComponent(String(<%= proyecto.redmine_id || proyecto.id || "" %>))' class="button">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                    </svg>
                                    <span>Evaluar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Descripción -->
                    <div style="margin-bottom: 32px;">
                        <h2 style="font-size: 18px; font-weight: 600; margin-bottom: 12px; color: var(--text-primary);">
                            Descripción
                        </h2>
                        <div id="descripcionView" style="color: var(--text-secondary); line-height: 1.6;">
                            <%= proyecto.descripcion || 'Sin descripción' %>
                        </div>
                        <div id="descripcionEdit" style="display: none;">
                            <textarea 
                                id="descripcionInput" 
                                class="input" 
                                style="width: 100%; min-height: 120px; padding: 16px; font-family: 'Roboto', sans-serif; font-size: 14px; resize: vertical; border-radius: 12px; border: 1px solid var(--border-color); background: #f8f9fa; color: var(--text-primary); line-height: 1.6; transition: all 0.2s ease;"
                                placeholder="Ingrese la descripción del proyecto..."
                                onfocus="this.style.borderColor='var(--primary-color)'; this.style.boxShadow='0 0 0 2px rgba(13, 90, 162, 0.1)'; this.style.background='white'"
                                onblur="this.style.borderColor='var(--border-color)'; this.style.boxShadow='none'; this.style.background='#f8f9fa'"
                            ><%= proyecto.descripcion || '' %></textarea>
                        </div>
                    </div>
                    
                    <!-- Información general -->
                    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 24px; margin-bottom: 32px; max-width: 1200px; margin-left: auto; margin-right: auto; align-items: start;">
                        <!-- Columna 1: Sección -->
                        <div>
                            <div style="min-height: 60px;">
                                <div style="color: var(--text-secondary); font-size: 13px; margin-bottom: 4px;">
                                    Sección
                                </div>
                                <div id="seccionView" style="display: flex; align-items: center; gap: 8px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" style="color: var(--primary-color);">
                                        <path d="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/>
                                    </svg>
                                    <span style="font-weight: 500; color: var(--text-primary);">
                                        <%= proyecto.seccion || proyecto.proyecto_completo || 'Sin sección' %>
                                    </span>
                                </div>
                                <div id="seccionEdit" style="display: none;">
                                    <select 
                                        id="seccionInput" 
                                        class="input"
                                        style="width: 100%; padding: 10px 16px; border-radius: 12px; border: 1px solid var(--border-color); font-size: 14px; font-family: 'Google Sans', 'Roboto', sans-serif; background: white; cursor: pointer; transition: all 0.2s ease;"
                                    >
                                        <option value="">Seleccionar sección...</option>
                                        <option value="Operatorias" <%= proyecto.seccion === 'Operatorias' ? 'selected' : '' %>>Operatorias</option>
                                        <option value="Reportes e interfaces" <%= proyecto.seccion === 'Reportes e interfaces' ? 'selected' : '' %>>Reportes e interfaces</option>
                                        <option value="Backoffice" <%= proyecto.seccion === 'Backoffice' ? 'selected' : '' %>>Backoffice</option>
                                        <option value="Mercados" <%= proyecto.seccion === 'Mercados' ? 'selected' : '' %>>Mercados</option>
                                        <option value="Contabilidad" <%= proyecto.seccion === 'Contabilidad' ? 'selected' : '' %>>Contabilidad</option>
                                        <option value="Valuacion" <%= proyecto.seccion === 'Valuacion' ? 'selected' : '' %>>Valuacion</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Columna 2: Fecha de creación, Estado -->
                        <div>
                            <% if (proyecto.fecha_creacion) { %>
                                <div style="min-height: 60px; margin-bottom: 24px;">
                                    <div style="color: var(--text-secondary); font-size: 13px; margin-bottom: 8px;">
                                        Fecha de creación
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 8px;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" style="color: var(--primary-color);">
                                            <path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
                                        </svg>
                                        <span style="font-weight: 500; color: var(--text-primary);">
                                            <%= new Date(proyecto.fecha_creacion).toLocaleDateString('es-AR', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                        </span>
                                    </div>
                                </div>
                            <% } else { %>
                                <div style="min-height: 60px; margin-bottom: 24px;"></div>
                            <% } %>
                            
                            <% if (proyecto.estado_redmine) { %>
                                <div style="min-height: 60px;">
                                    <div style="color: var(--text-secondary); font-size: 13px; margin-bottom: 8px;">
                                        Estado
                                    </div>
                                    <div style="display: flex; align-items: center; gap: 8px;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" style="color: var(--primary-color);">
                                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                                        </svg>
                                        <span style="font-weight: 500; color: var(--text-primary);">
                                            <%= proyecto.estado_redmine %>
                                        </span>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Criterios de score (si existen) -->
                    <% if (proyecto.facturacion || proyecto.impacto_cliente) { %>
                        <div style="border-top: 1px solid var(--border-color); padding-top: 24px;">
                            <h2 style="font-size: 18px; font-weight: 600; margin-bottom: 16px; color: var(--text-primary);">
                                Criterios de Evaluación
                            </h2>
                            
                            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
                                <% if (proyecto.origen) { %>
                                    <div style="padding: 16px; background: var(--hover-bg); border-radius: 12px;">
                                        <div style="color: var(--text-secondary); font-size: 13px; margin-bottom: 4px;">
                                            Origen
                                        </div>
                                        <div style="font-size: 24px; font-weight: 600; color: var(--primary-color);">
                                            <%= (parseFloat(proyecto.origen) || 0).toFixed(1) %> <span style="font-size: 14px; color: var(--text-secondary);">/5</span>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <% if (proyecto.facturacion) { %>
                                    <div style="padding: 16px; background: var(--hover-bg); border-radius: 12px;">
                                        <div style="color: var(--text-secondary); font-size: 13px; margin-bottom: 4px;">
                                            Facturación
                                        </div>
                                        <div style="font-size: 24px; font-weight: 600; color: var(--primary-color);">
                                            <%= (parseFloat(proyecto.facturacion) || 0).toFixed(1) %> <span style="font-size: 14px; color: var(--text-secondary);">/5</span>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <% if (proyecto.impacto_cliente) { %>
                                    <div style="padding: 16px; background: var(--hover-bg); border-radius: 12px;">
                                        <div style="color: var(--text-secondary); font-size: 13px; margin-bottom: 4px;">
                                            Impacto Negocio
                                        </div>
                                        <div style="font-size: 24px; font-weight: 600; color: var(--primary-color);">
                                            <%= (parseFloat(proyecto.impacto_cliente) || 0).toFixed(1) %> <span style="font-size: 14px; color: var(--text-secondary);">/5</span>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/main.js"></script>
    <script>
        let modoEdicion = false;
        const redmineId = <%- JSON.stringify(proyecto.redmine_id || proyecto.id) %>;
        
        function toggleEdicion() {
            modoEdicion = !modoEdicion;
            const btnEditar = document.getElementById('btnEditar');
            const btnEditarTexto = document.getElementById('btnEditarTexto');
            const descripcionView = document.getElementById('descripcionView');
            const descripcionEdit = document.getElementById('descripcionEdit');
            const seccionView = document.getElementById('seccionView');
            const seccionEdit = document.getElementById('seccionEdit');
            if (modoEdicion) {
                btnEditarTexto.textContent = 'Guardar';
                descripcionView.style.display = 'none';
                descripcionEdit.style.display = 'block';
                if (seccionView) seccionView.style.display = 'none';
                if (seccionEdit) seccionEdit.style.display = 'block';
            } else {
                // Guardar cambios
                guardarCambios();
            }
        }
        
        async function guardarCambios() {
            const descripcion = document.getElementById('descripcionInput')?.value || '';
            const seccion = document.getElementById('seccionInput')?.value || '';
            
            // Guardar proyecto
            try {
                const response = await fetch(`/proyectos-internos/${encodeURIComponent(redmineId)}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        descripcion,
                        seccion
                    })
                });
                
                const data = await response.json();
                
                if (!data.success) {
                    console.error('Error al guardar:', data.error || 'Error desconocido');
                    alert('Error al guardar: ' + (data.error || 'Error desconocido'));
                    return;
                }
                
                // Redirigir a /proyectos-internos después de guardar exitosamente
                window.location.href = '/proyectos-internos';
            } catch (error) {
                console.error('Error al guardar:', error);
                alert('Error al guardar: ' + error.message);
                return;
            }
        }
    </script>
</body>
</html>

