<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css?v=<%= Date.now() %>">
</head>
<body>
    <!-- Header General -->
    <header class="top-header">
        <div style="display: flex; align-items: center; gap: 12px;">
            <img src="/images/logo.png" alt="Logo" style="height: 28px; width: auto; display: block;" onerror="this.style.display='none';" />
            <span onclick="window.location.href='/funcionalidades'" style="font-size: 16px; font-weight: 500; color: var(--text-secondary); font-family: 'Google Sans', 'Roboto', sans-serif; cursor: pointer; transition: color 0.2s;" onmouseover="this.style.color='var(--primary-color)'" onmouseout="this.style.color='var(--text-secondary)'">Cat√°logo</span>
        </div>
    </header>
    
    <div class="app-container" style="margin-top: 0;">
        <%- include('../partials/sidebar', { activeMenu: 'funcionalidades' }) %>
        
        <div class="main-content">
            <!-- Toolbar -->
            <div class="toolbar">
                <div class="toolbar-left" style="display: flex; align-items: center; gap: 8px;">
                    <!-- Botones de filtro -->
                    <div style="position: relative; margin-right: 12px;">
                        <button class="filter-btn <%= (typeof filtros.secciones !== 'undefined' && filtros.secciones.length > 0) ? 'filter-btn-active' : '' %>" onclick="toggleFilterSecciones()" title="Filtrar por Secci√≥n">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" style="width: 18px; height: 18px;">
                                <path d="M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z"/>
                            </svg>
                            <span style="margin-left: 6px; font-size: 13px;">Secci√≥n</span>
                        </button>
                        <div class="filter-dropdown" id="filterSecciones" style="display: none;">
                            <% secciones.forEach(seccion => { %>
                                <label style="display: flex; align-items: center; padding: 10px 16px; cursor: pointer; transition: background 0.2s;" 
                                       onmouseover="this.style.background='#f1f3f4'" 
                                       onmouseout="this.style.background='white'">
                                    <input 
                                        type="checkbox" 
                                        class="filter-checkbox-seccion" 
                                        value="<%= seccion %>"
                                        <%= (typeof filtros.secciones !== 'undefined' && filtros.secciones.includes(seccion)) ? 'checked' : '' %>
                                        style="margin-right: 8px; cursor: pointer;"
                                        onchange="aplicarFiltros()"
                                    />
                                    <span style="font-size: 13px;"><%= seccion %></span>
                                </label>
                            <% }) %>
                        </div>
                    </div>
                    
                    <div style="position: relative;">
                        <button class="filter-btn <%= (typeof filtros.sponsors !== 'undefined' && filtros.sponsors.length > 0) ? 'filter-btn-active' : '' %>" onclick="toggleFilterSponsors()" title="Filtrar por Sponsor">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" style="width: 18px; height: 18px;">
                                <path d="M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z"/>
                            </svg>
                            <span style="margin-left: 6px; font-size: 13px;">Sponsor</span>
                        </button>
                        <div class="filter-dropdown" id="filterSponsors" style="display: none;">
                            <% if (typeof sponsors !== 'undefined') { %>
                                <% sponsors.forEach(sponsor => { %>
                                    <label style="display: flex; align-items: center; padding: 10px 16px; cursor: pointer; transition: background 0.2s;" 
                                           onmouseover="this.style.background='#f1f3f4'" 
                                           onmouseout="this.style.background='white'">
                                        <input 
                                            type="checkbox" 
                                            class="filter-checkbox-sponsor" 
                                            value="<%= sponsor %>"
                                            <%= (typeof filtros.sponsors !== 'undefined' && filtros.sponsors.includes(sponsor)) ? 'checked' : '' %>
                                            style="margin-right: 8px; cursor: pointer;"
                                            onchange="aplicarFiltros()"
                                        />
                                        <span style="font-size: 13px;"><%= sponsor %></span>
                                    </label>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>
                    
                </div>
                
                <div class="toolbar-right" style="display: flex; align-items: center; gap: 12px; flex: 1; justify-content: center;">
                    <!-- Buscador estilo Google con bot√≥n de sincronizaci√≥n -->
                    <div style="display: flex; align-items: center; gap: 8px; max-width: 600px; width: 100%; margin: 0 auto;">
                        <div style="position: relative; flex: 1;">
                            <form onsubmit="buscar(event)" class="google-search-box" style="position: relative;">
                                <div style="display: flex; align-items: center; background: white; border: 1px solid #dfe1e5; border-radius: 24px; padding: 0 16px; height: 44px; box-shadow: 0 2px 5px 1px rgba(64,60,67,.16); transition: all 0.2s;" id="searchBoxContainer">
                                    <svg style="width: 20px; height: 20px; color: #9aa0a6; margin-right: 12px; flex-shrink: 0;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                                    </svg>
                                    <textarea 
                                        id="searchInput" 
                                        class="google-search-input"
                                        rows="1"
                                        placeholder="Buscar funcionalidades..."
                                        autocomplete="off"
                                        autocapitalize="off"
                                        autocorrect="off"
                                        spellcheck="false"
                                        style="flex: 1; border: none; outline: none; font-size: 16px; font-family: 'Google Sans', 'Roboto', sans-serif; resize: none; overflow: hidden; padding: 0; margin: 0; background: transparent; line-height: 44px; max-height: 44px;"
                                        oninput="this.style.height='auto'; this.style.height=Math.min(this.scrollHeight, 44)+'px'; buscarSugerencias(this.value);"
                                        onfocus="document.getElementById('searchBoxContainer').style.boxShadow='0 2px 8px 1px rgba(64,60,67,.24)'; document.getElementById('searchBoxContainer').style.borderColor='transparent';"
                                        onblur="setTimeout(() => { document.getElementById('searchBoxContainer').style.boxShadow='0 2px 5px 1px rgba(64,60,67,.16)'; document.getElementById('searchBoxContainer').style.borderColor='#dfe1e5'; }, 200);"
                                    ><%= typeof filtros !== 'undefined' && filtros.busqueda ? filtros.busqueda : '' %></textarea>
                                </div>
                                <!-- Sugerencias -->
                                <div id="searchSuggestions" class="google-search-suggestions" style="display: none; position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid #dfe1e5; border-radius: 0 0 24px 24px; box-shadow: 0 4px 6px rgba(32,33,36,.28); margin-top: -1px; z-index: 1000; max-height: 400px; overflow-y: auto;">
                                </div>
                            </form>
                        </div>
                        
                        <!-- Bot√≥n de sincronizaci√≥n (solo admin puede usar) -->
                        <button class="icon-button" onclick="<%= isAdmin ? 'sincronizarRedmine()' : 'alert(\'Solo administradores pueden sincronizar con Redmine\')' %>" title="<%= isAdmin ? 'Sincronizar con Redmine' : 'Solo administradores pueden sincronizar' %>" id="syncButton" style="display: flex; align-items: center; justify-content: center; width: 44px; height: 44px; border-radius: 50%; border: none; background: <%= isAdmin ? '#316ba1' : '#9aa0a6' %>; cursor: <%= isAdmin ? 'pointer' : 'not-allowed' %>; transition: all 0.2s; flex-shrink: 0;<%= isAdmin ? '' : ' opacity: 0.5;' %>" onmouseover="<%= isAdmin ? 'this.style.background=\'#2a5a8a\'' : '' %>" onmouseout="<%= isAdmin ? 'this.style.background=\'#316ba1\'' : '' %>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="color: white;">
                                <path d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.81 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"/>
                            </svg>
                        </button>
                    </div>
                    
                    <div class="view-toggle">
                        <button class="view-btn <%= vista === 'lista' ? 'active' : '' %>" onclick="cambiarVista('lista')" title="Vista de lista">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M4 14h4v-4H4v4zm0 5h4v-4H4v4zM4 9h4V5H4v4zm5 5h12v-4H9v4zm0 5h12v-4H9v4zM9 5v4h12V5H9z"/>
                            </svg>
                        </button>
                        <button class="view-btn <%= vista === 'tarjetas' ? 'active' : '' %>" onclick="cambiarVista('tarjetas')" title="Vista de tarjetas">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M4 11h5V5H4v6zm0 7h5v-6H4v6zm6 0h5v-6h-5v6zm6 0h5v-6h-5v6zm-6-7h5V5h-5v6zm6-6v6h5V5h-5z"/>
                            </svg>
                        </button>
                    </div>
                    
                    <span class="text-muted text-small">
                        <%= funcionalidades.length %> funcionalidades
                    </span>
                </div>
            </div>
            
            <!-- Filtros aplicados (debajo del toolbar) -->
            <% if ((typeof filtros.secciones !== 'undefined' && filtros.secciones.length > 0) || (typeof filtros.sponsors !== 'undefined' && filtros.sponsors.length > 0)) { %>
                <div style="padding: 12px 24px; background: white; border-bottom: 1px solid var(--border-color); display: flex; align-items: center; gap: 8px; flex-wrap: wrap;">
                    <!-- Chips de filtros aplicados -->
                    <% if (typeof filtros.secciones !== 'undefined' && filtros.secciones.length > 0) { %>
                        <% filtros.secciones.forEach(seccion => { %>
                            <div class="filter-chip" style="display: inline-flex; align-items: center; background: #e8f0fe; color: var(--primary-color); padding: 6px 12px; border-radius: 16px; font-size: 13px; font-weight: 500; gap: 8px;">
                                <span>Secci√≥n: <%= seccion %></span>
                                <button onclick="removerFiltroSeccion('<%= seccion %>')" style="background: none; border: none; cursor: pointer; padding: 0; display: flex; align-items: center; color: var(--primary-color);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                                    </svg>
                                </button>
                            </div>
                        <% }) %>
                    <% } %>
                    
                    <% if (typeof filtros.sponsors !== 'undefined' && filtros.sponsors.length > 0) { %>
                        <% filtros.sponsors.forEach(sponsor => { %>
                            <div class="filter-chip" style="display: inline-flex; align-items: center; background: #e8f0fe; color: var(--primary-color); padding: 6px 12px; border-radius: 16px; font-size: 13px; font-weight: 500; gap: 8px;">
                                <span>Sponsor: <%= sponsor %></span>
                                <button onclick="removerFiltroSponsor('<%= sponsor %>')" style="background: none; border: none; cursor: pointer; padding: 0; display: flex; align-items: center; color: var(--primary-color);">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                                    </svg>
                                </button>
                            </div>
                        <% }) %>
                    <% } %>
                    
                    <button onclick="limpiarFiltros()" style="background: rgb(241, 243, 244); border: none; color: var(--text-secondary); font-size: 13px; cursor: pointer; padding: 6px 12px; border-radius: 16px; transition: background 0.2s;" onmouseover="this.style.background='#e8eaed'" onmouseout="this.style.background='rgb(241, 243, 244)'">
                        Borrar filtros
                    </button>
                </div>
            <% } %>
            
            <!-- Contenido -->
            <div class="content-area">
                <% if (funcionalidades.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-state-icon">üìã</div>
                        <div class="empty-state-text">No se encontraron funcionalidades</div>
                        <div class="empty-state-subtext">Las funcionalidades se sincronizan autom√°ticamente desde Redmine al iniciar el servidor</div>
                    </div>
                <% } else if (vista === 'lista') { %>
                    <!-- Vista de Lista -->
                    <div class="list-view">
                        <div class="list-header">
                            <div onclick="ordenar('titulo')" style="cursor: pointer;" data-sort="titulo">
                                T√≠tulo
                                <svg class="sort-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M7 10l5 5 5-5z"/>
                                </svg>
                            </div>
                            <div onclick="ordenar('seccion')" style="cursor: pointer;" data-sort="seccion">
                                Secci√≥n
                                <svg class="sort-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M7 10l5 5 5-5z"/>
                                </svg>
                            </div>
                            <div onclick="ordenar('sponsor')" style="cursor: pointer;" data-sort="sponsor">
                                Sponsor
                                <svg class="sort-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M7 10l5 5 5-5z"/>
                                </svg>
                            </div>
                            <div onclick="ordenar('fecha_creacion')" style="cursor: pointer;" class="desktop-only" id="fechaCreacionHeader" data-sort="fecha_creacion">
                                Fecha Creaci√≥n
                                <svg class="sort-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M7 10l5 5 5-5z"/>
                                </svg>
                            </div>
                            <div onclick="ordenar('epic_redmine')" style="cursor: pointer;" class="desktop-only" data-sort="epic_redmine">
                                Epic Redmine
                                <svg class="sort-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M7 10l5 5 5-5z"/>
                                </svg>
                            </div>
                            <div onclick="ordenar('score_total')" style="cursor: pointer;" data-sort="score_total" class="<%= (typeof filtros !== 'undefined' && (!filtros.orden || filtros.orden === 'score_total')) ? 'sorted' : '' %>">
                                Score
                                <svg class="sort-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M7 10l5 5 5-5z"/>
                                </svg>
                            </div>
                        </div>
                        
                        <% funcionalidades.forEach(func => { %>
                            <div class="list-item" onclick="verDetalle(<%= func.redmine_id %>)">
                                <div class="item-title">
                                    <div class="item-icon">
                                        <%= (func.titulo || '?').substring(0, 1).toUpperCase() %>
                                    </div>
                                    <div>
                                        <div><%= func.titulo || 'Sin t√≠tulo' %></div>
                                        <% if (func.descripcion) { %>
                                            <div class="text-small text-muted text-truncate" style="max-width: 400px;">
                                                <%= func.descripcion %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="item-text"><%= (func.seccion || '-').trim() %></div>
                                <div class="item-text sponsor-cell"><%= (func.sponsor || '-').trim() %></div>
                                <div class="item-text desktop-only">
                                    <% if (func.fecha_creacion) { %>
                                        <%= new Date(func.fecha_creacion).toLocaleDateString('es-AR', { year: 'numeric', month: '2-digit', day: '2-digit' }) %>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </div>
                                <div class="item-text desktop-only">
                                    <% if (func.epic_redmine) { %>
                                        <a href="<%= func.epic_redmine %>" target="_blank" onclick="event.stopPropagation();" style="color: var(--primary-color); text-decoration: none;">
                                            Ver en Redmine
                                        </a>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </div>
                                <div>
                                    <% 
                                    let score = func.score_calculado || func.score_total || 0;
                                    score = parseFloat(score) || 0;
                                    let scoreClass = 'score-low';
                                    if (score > 6.50) scoreClass = 'score-high';
                                    else if (score > 4) scoreClass = 'score-medium';
                                    %>
                                    <span class="score-badge <%= scoreClass %>">
                                        <%= score.toFixed(1) %>
                                    </span>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <!-- Vista de Tarjetas -->
                    <div class="cards-view">
                        <% funcionalidades.forEach(func => { %>
                            <div class="card" onclick="verDetalle(<%= func.redmine_id %>)">
                                <div class="card-header">
                                    <h3 class="card-title"><%= func.titulo || 'Sin t√≠tulo' %></h3>
                                    <button class="card-menu" onclick="event.stopPropagation(); eliminarFuncionalidad(<%= func.redmine_id %>)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
                                        </svg>
                                    </button>
                                </div>
                                
                                <% if (func.descripcion) { %>
                                    <p class="card-description"><%= func.descripcion %></p>
                                <% } %>
                                
                                <div class="card-meta">
                                    <% if (func.seccion) { %>
                                        <span class="card-tag">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z"/>
                                            </svg>
                                            <%= func.seccion %>
                                        </span>
                                    <% } %>
                                    
                                    <% if (func.sponsor) { %>
                                        <span class="card-tag">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                            </svg>
                                            <%= func.sponsor %>
                                        </span>
                                    <% } %>
                                    
                                    <% 
                                    let score = func.score_calculado || func.score_total || 0;
                                    score = parseFloat(score) || 0;
                                    let scoreClass = 'score-low';
                                    if (score > 6.50) scoreClass = 'score-high';
                                    else if (score > 4) scoreClass = 'score-medium';
                                    %>
                                    <span class="score-badge <%= scoreClass %>">
                                        ‚≠ê <%= score.toFixed(1) %>
                                    </span>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <script src="/js/main.js"></script>
    <script>
        // Funci√≥n para buscar sugerencias
        let timeoutSugerencias;
        async function buscarSugerencias(query) {
            clearTimeout(timeoutSugerencias);
            
            const suggestionsContainer = document.getElementById('searchSuggestions');
            if (!query || query.length < 2) {
                if (suggestionsContainer) {
                    suggestionsContainer.style.display = 'none';
                }
                return;
            }
            
            timeoutSugerencias = setTimeout(async () => {
                try {
                    const response = await fetch(`/api/funcionalidades/sugerencias?q=${encodeURIComponent(query)}`);
                    const data = await response.json();
                    
                    if (data.success && data.sugerencias && data.sugerencias.length > 0) {
                        const html = data.sugerencias.map(func => `
                            <div class="google-suggestion-item" onclick="aplicarFiltroBusqueda('${func.titulo.replace(/'/g, "\\'")}')" onmouseover="this.style.backgroundColor='#f1f3f4'" onmouseout="this.style.backgroundColor='white'">
                                <svg style="width: 20px; height: 20px; color: #9aa0a6; margin-right: 12px; flex-shrink: 0;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                                </svg>
                                <div style="flex: 1; min-width: 0;">
                                    <div style="font-size: 14px; color: #202124; font-weight: 400;">${func.titulo}</div>
                                    ${func.seccion || func.sponsor ? `<div style="font-size: 12px; color: #5f6368; margin-top: 2px;">${[func.seccion, func.sponsor].filter(Boolean).join(' ‚Ä¢ ')}</div>` : ''}
                                </div>
                            </div>
                        `).join('');
                        
                        suggestionsContainer.innerHTML = html;
                        suggestionsContainer.style.display = 'block';
                    } else {
                        suggestionsContainer.style.display = 'none';
                    }
                } catch (error) {
                    console.error('Error al obtener sugerencias:', error);
                    suggestionsContainer.style.display = 'none';
                }
            }, 300);
        }
        
        function aplicarFiltroBusqueda(texto) {
            const params = new URLSearchParams(window.location.search);
            params.set('busqueda', texto);
            window.location.search = params.toString();
        }
        
        // Cerrar sugerencias al hacer clic fuera
        document.addEventListener('click', (e) => {
            const searchBox = document.querySelector('.google-search-box');
            const suggestions = document.getElementById('searchSuggestions');
            if (searchBox && suggestions && !searchBox.contains(e.target)) {
                setTimeout(() => {
                    suggestions.style.display = 'none';
                }, 200);
            }
        });
        
        // Ajustar altura del textarea autom√°ticamente
        document.addEventListener('DOMContentLoaded', () => {
            const textarea = document.getElementById('searchInput');
            if (textarea) {
                textarea.style.height = 'auto';
                textarea.style.height = '44px';
            }
            
            // Expandir sidebar por defecto en funcionalidades
            const sidebar = document.getElementById('sidebar');
            const toggle = document.querySelector('.sidebar-toggle');
            if (sidebar && sidebar.classList.contains('collapsed')) {
                sidebar.classList.remove('collapsed');
                if (toggle) {
                    toggle.style.left = 'calc(var(--sidebar-width) - 16px)';
                }
                // Actualizar localStorage para mantener el estado expandido
                localStorage.setItem('sidebarCollapsed', 'false');
            }
        });
    </script>
</body>
</html>

