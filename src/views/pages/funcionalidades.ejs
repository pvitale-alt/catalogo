        function aplicarFiltroBusqueda(texto) {
            const params = new URLSearchParams(window.location.search);
            params.set('busqueda', texto);
            window.location.search = params.toString();
        }
        
        function buscar(event) {
            if (event) event.preventDefault();
            const query = document.getElementById('searchInput').value.trim();
            const params = new URLSearchParams(window.location.search);
            if (query) {
                params.set('busqueda', query);
            } else {
                params.delete('busqueda');
            }
            window.location.search = params.toString();
        }
        
        function limpiarBusqueda() {
            // Limpiar el input
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.value = '';
            }
            // Eliminar el par√°metro de b√∫squeda y refrescar
            const params = new URLSearchParams(window.location.search);
            params.delete('busqueda');
            window.location.search = params.toString();
        }
        
        function actualizarBotonLimpiar() {
            const searchInput = document.getElementById('searchInput');
            const searchBox = document.getElementById('searchBoxContainer');
            if (!searchInput || !searchBox) return;
            
            // Eliminar todos los botones de limpiar existentes para evitar duplicados
            const existingClearBtns = searchBox.querySelectorAll('.clear-search-btn');
            existingClearBtns.forEach(btn => btn.remove());
            
            // Crear nuevo bot√≥n solo si hay texto
            if (searchInput.value.trim()) {
                const clearBtn = document.createElement('button');
                clearBtn.className = 'clear-search-btn';
                clearBtn.onclick = (e) => { 
                    e.stopPropagation(); 
                    e.preventDefault();
                    limpiarBusqueda(); 
                };
                clearBtn.style.cssText = 'background: none; border: none; cursor: pointer; padding: 0; display: flex; align-items: center; margin-left: 8px; color: #5f6368;';
                clearBtn.title = 'Limpiar b√∫squeda';
                clearBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/></svg>';
                searchBox.appendChild(clearBtn);
            }
        }
        
        function crearFuncionalidad() {
            const modal = document.getElementById('modalNuevaFuncionalidad');
            if (modal) {
                modal.style.display = 'flex';
                // Limpiar campos
                document.getElementById('nuevaFuncionalidadTitulo').value = '';
                document.getElementById('nuevaFuncionalidadDescripcion').value = '';
                document.getElementById('nuevaFuncionalidadSeccion').value = '';
                const montoInput = document.getElementById('nuevaFuncionalidadMonto');
                if (montoInput) montoInput.value = '';
                document.getElementById('nuevaFuncionalidadRedmineId').value = '';
                document.getElementById('nuevaFuncionalidadProyecto').value = '';
                document.getElementById('nuevaFuncionalidadCliente').value = '';
                document.getElementById('nuevaFuncionalidadReventa').value = '';
                document.getElementById('nuevaFuncionalidadFechaCreacion').value = '';
                document.getElementById('nuevaFuncionalidadHoras').value = '';
            }
        }
        
        function cerrarModalNuevaFuncionalidad() {
            const modal = document.getElementById('modalNuevaFuncionalidad');
            if (modal) {
                modal.style.display = 'none';
            }
        }
        
        function guardarNuevaFuncionalidad(event) {
            event.preventDefault();
            
            const titulo = document.getElementById('nuevaFuncionalidadTitulo').value.trim();
            if (!titulo) {
                alert('El t√≠tulo es requerido');
                return;
            }
            
            const descripcion = document.getElementById('nuevaFuncionalidadDescripcion').value.trim() || null;
            const seccion = document.getElementById('nuevaFuncionalidadSeccion').value || null;
            const montoInput = document.getElementById('nuevaFuncionalidadMonto');
            const monto = montoInput ? (montoInput.value ? parseFloat(montoInput.value) : null) : null;
            
            // Campos de Redmine
            const redmineIdInput = document.getElementById('nuevaFuncionalidadRedmineId');
            const redmineId = redmineIdInput.value.trim() || null;
            const proyecto = document.getElementById('nuevaFuncionalidadProyecto').value.trim() || null;
            const cliente = document.getElementById('nuevaFuncionalidadCliente').value.trim() || null;
            const reventa = document.getElementById('nuevaFuncionalidadReventa').value || null;
            const fechaCreacionInput = document.getElementById('nuevaFuncionalidadFechaCreacion');
            const fechaCreacion = fechaCreacionInput.value || null;
            const horasInput = document.getElementById('nuevaFuncionalidadHoras');
            const horas = horasInput.value ? parseFloat(horasInput.value) : null;
            
            fetch('/funcionalidades', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    titulo: titulo,
                    titulo_personalizado: titulo,
                    descripcion: descripcion,
                    seccion: seccion,
                    monto: monto,
                    redmine_id: redmineId,
                    proyecto: proyecto,
                    cliente: cliente,
                    reventa: reventa,
                    fecha_creacion: fechaCreacion,
                    total_spent_hours: horas
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    cerrarModalNuevaFuncionalidad();
                    window.location.reload();
                } else {
                    alert('Error al crear funcionalidad: ' + (data.error || 'Error desconocido'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error al crear funcionalidad: ' + error.message);
            });
        }
        
        // Cerrar sugerencias al hacer clic fuera
        document.addEventListener('click', (e) => {
            const searchBox = document.querySelector('.google-search-box');
            const suggestions = document.getElementById('searchSuggestions');
            if (searchBox && suggestions && !searchBox.contains(e.target)) {
                setTimeout(() => {
                    suggestions.style.display = 'none';
                }, 200);
            }
        });
        
        // Ajustar altura del textarea autom√°ticamente
        document.addEventListener('DOMContentLoaded', () => {
            const textarea = document.getElementById('searchInput');
            if (textarea) {
                textarea.style.height = 'auto';
                textarea.style.height = '44px';
                // Actualizar bot√≥n de limpiar al cargar si hay texto
                actualizarBotonLimpiar();
            }
            
            // Expandir sidebar por defecto en funcionalidades
            const sidebar = document.getElementById('sidebar');
            const toggle = document.querySelector('.sidebar-toggle');
            if (sidebar && sidebar.classList.contains('collapsed')) {
                sidebar.classList.remove('collapsed');
                if (toggle) {
                    toggle.style.left = 'calc(var(--sidebar-width) - 16px)';
                }
                // Actualizar localStorage para mantener el estado expandido
                localStorage.setItem('sidebarCollapsed', 'false');
            }
        });
    </script>
    
    <!-- Modal para crear nueva funcionalidad -->
